title = {Semi-{Supervised} {Prediction} of {SH2}-{Peptide} 
         {Interactions} from {Imbalanced} {High}-{Throughput} {Data}},
journal = {PLoS One},
year = {2013},
doi = {10.1371/journal.pone.0062732},

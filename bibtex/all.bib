@article{Qin_Fricke_Marz-Graph_distr_the-2014,
author = {Qin, Jing and Fricke, Markus and Marz, Manja and Stadler, 
          Peter F. and Backofen, Rolf},
title = {Graph-distance distribution of the {Boltzmann} ensemble of 
         {RNA} secondary structures},
journal = {Algorithms Mol Biol},
year = {2014},
doi = {10.1186/1748-7188-9-19},
